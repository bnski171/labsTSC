{
  "compilerOptions": {
    "target": "es5",                
    "module": "commonjs",           
    "strict": true,                  
    "esModuleInterop": true,        
    "outDir": "./dist",             
    "sourceMap": true,              
    "removeComments": true,         
    "noImplicitAny": true,          
    "strictNullChecks": true,       
    "strictFunctionTypes": true     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

//tsc --noEmitOnError --target ES5 compile.ts